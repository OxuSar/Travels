<script>
    function setLanguage(lang) {
        // Tilni cookie'da saqlash
        document.cookie = "ui-culture=" + lang + "; path=/; expires=Fri, 31 Dec 9999 23:59:59 GMT";

        // Hozirgi sahifa URL'ini o'qib, til parametrini qo'shamiz
        var currentPath = window.location.pathname;
        var currentQuery = window.location.search;

        var params = new URLSearchParams(currentQuery);
        params.delete('ui-culture');  // Mavjud til parametrini o'chirish
        params.append('ui-culture', lang);  // Yangi til parametrini qo'shish

        var newUrl = currentPath + '?' + params.toString();
        window.location.href = newUrl;  // Sahifa qayta yuklanadi
    }
</script>
